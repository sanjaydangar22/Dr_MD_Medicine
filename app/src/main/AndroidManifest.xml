<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrMDClinic"
        tools:targetApi="tiramisu">
        <activity
            android:name=".staff_panel.StaffHomeActivity"
            android:exported="false" />

        <activity
            android:name=".Admin_panel.activity.PatientHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".Admin_panel.activity.CreateNewStaffActivity"
            android:exported="false" />
        <activity
            android:name=".Admin_panel.activity.CompletedAppointmentsActivity"
            android:exported="false" />
        <activity
            android:name=".Admin_panel.activity.PatientCheckUpActivity"
            android:exported="false" />
        <activity
            android:name=".Admin_panel.Disease.DiseaseActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LoginOptionActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Admin_panel.activity.AppointmentsActivity"
            android:exported="false" />
        <activity
            android:name=".Admin_panel.activity.ReportViewActivity"
            android:exported="false" />
        <activity
            android:name=".Admin_panel.activity.PatientDataViewActivity"
            android:exported="false" />
        <activity
            android:name=".Admin_panel.activity.AddPatientActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".Admin_panel.activity.AdminHomeActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>